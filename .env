# Server Port
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster.mongodb.net/goaltracker?retryWrites=true&w=majority

# JWT Secret (generate random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Firebase Admin (optional for advanced auth)
FIREBASE_PROJECT_ID=your-firebase-project-id

# CORS Origins
ALLOWED_ORIGINS=http://localhost:5500,http://localhost:3000,https://your-app.netlify.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
